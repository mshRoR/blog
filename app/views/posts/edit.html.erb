<% provide(:title, "Update Post") %><h1 class="text-center">Edit Post</h1><%= form_for @post do |f| %>    <% if @post.errors.any? %>        <h2 class="alert-info">Errors: </h2>        <ul class="alert-danger">          <% @post.errors.full_messages.each do |message| %>              <li><%= message %></li>          <% end %>        </ul>    <% end %>    <p>      <%= f.label :title %>      <%= f.text_field :title, class:"form-control" %>    </p>    <p>      <%= f.label :content %>      <%= f.text_area :content, class:"form-control" %>    </p>    <p>      <%= f.submit "Update Post", class:"btn btn-info" %>      <%= link_to "Back", posts_path, class: "btn btn-primary" %>    </p><% end %>
<% provide(:title, "New Post") %>
<h1 class="text-center">Add a New Post</h1>

<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <h2 class="alert-info">Errors: </h2>
        <ul class="alert-danger">
          <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>

	<p>
		<%= f.label :title %> <br/>
		<%= f.text_field :title, class:"form-control" %>
	</p>
	<p>
		<%= f.label :content %> <br/>
		<%= f.text_area :content, class:"form-control" %>
	</p>
	<p>
		<%= f.submit "Add a New Post", class:"btn btn-success" %>
		<%= link_to "Back", posts_path, class: "btn btn-primary" %>
	</p>
<% end %>



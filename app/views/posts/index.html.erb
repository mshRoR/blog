<% provide(:title, "Blog") %><h1 class="text-center"><u>Our Blog</u></h1><% @posts.each do |post| %>    <h3><%= link_to post.title, post %></h3>    <p class="text-justify"><%= post.content %></p>    <p>      <%= link_to "Show", post_path(post), class: "btn btn-info" %>      <%= link_to "Edit", edit_post_path(post), class: "btn btn-primary" %>      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>    </p>    <hr/><% end %><p><%= link_to "Add A New Post", new_post_path, class: "btn btn-success" %></p>